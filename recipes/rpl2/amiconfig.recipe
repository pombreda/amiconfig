class AMIConfig(BuildPackageRecipe):
    name = 'amiconfig'
    version = '0.6.0'

    buildRequires = [ 'dnspython:python',
                      'initscripts:runtime' ]

    def setup(r):
        r.addMercurialSnapshot('http://hg.rpath.com/amiconfig',
            tag='%(name)s-%(version)s')
        r.Make()
        r.MakeInstall()
        r.TagSpec('initscript', '%(initdir)s/.*')
